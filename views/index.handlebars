<div class="container">

    <img src="/assets/img/eat-da-burger_1.png" class="rounded mx-auto d-block" alt="...">

</div>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="burgers">
                <h2 style="font-family: 'Potta One', cursive; text-align: center;">My Burgers:</h2>
                <ul class="list-group" style="width: 450px;">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger devoured=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col">
            <img src="/assets/img/eat-da-burger.png" style="float:left" class="rounded mx-auto d-block" alt="eat-da-burger">
        </div>
        <div class="col">
            <div class="devoured">
                <h2 style="font-family: 'Potta One', cursive;">have been devoured:</h2>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger devoured=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col">
        </div>
        <div class="col order-12">
            <div class="card" style="width: 18rem;">
                <div class="adder">
                    <h2 style="font-family: 'Potta One', cursive;">Add a Burger</h2>
                    <form class="create-form">

                        <div class="form-group">
                            <label for="burg" style="font-family: 'Potta One', cursive;">Burger Name:</label>
                            <input type="text" id="burg" burger_name="burger_name">
                        </div>

                        <button type="submit" style="font-family: 'Potta One', cursive;">Please Enter a new Burger
                            Name</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col order-1">
        </div>
    </div>
</div>